{{ define "pengguna.tmpl"}}

{{ template "templates/layout.tmpl" .}}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Email</th>
                        <th>NIK</th>
                        <th>Jabatan</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {{range $index,$val := .pengguna}}
                    <tr>
                        <td>{{$val.Name}}</td>
                        <td>{{$val.User.Email}}</td>
                        <td>{{$val.EmpNo}}</td>
                        <td>{{$val.Jabatan.Name}}</td>
                        <td>{{$val.User.Role.Name}}</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="window.location.href='/pengguna/{{$val.UserID}}'">Edit</button>
                            <button class="btn btn-danger btn-sm" onclick="confirmUserDelete({{$val.UserID}})">Delete</button>
                        </td>
                    </tr>
                {{end}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{ template "layouts/footer.tmpl" . }}

{{ template "layouts/script.tmpl" . }}

{{ template "layouts/script_datatables.tmpl" . }}

<script>
// Call the dataTables jQuery plugin
$(document).ready(function() {
  $('#dataTable').DataTable();
});
</script>

<script>
    function confirmUserDelete(id){
        Swal.fire({
            title: 'Apakah anda yakin ingin User ini?',
            text: "Anda tidak akan dapat mengembalikan user ini!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Ya, Hapus!',
            cancelButtonText: 'Batal'
        }).then(function(result){
            console.log(result)
            if (result.value) {
                $.ajax({
                    url: `/pengguna/${id}`,
                    type: "DELETE",
                    success: function(result) {
                        Swal.fire('Berhasil!', 'User berhasil dihapus.', 'success');
                        setTimeout(function(){window.location.reload();}, 3000);
                    },
                    error: function(err){
                        Swal.fire('Gagal!', 'Gagal Menghapus User.', 'error');
                    }
                });
            }
        });
    }
</script>

{{ end }}
