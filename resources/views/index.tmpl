                    resolve(response);
                },
                error: function(response) {
                    Swal.fire({
                        type: 'error',
                        title: 'Oops!',
                        text: response.responseJSON.message
                    });
                    reject(response);
                }
            });
        });
    }

     async function jenisKejadian(klasifikasiName) {
        return new Promise((resolve, reject) => {
            $.ajax({
