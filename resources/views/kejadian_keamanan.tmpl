<script type="text/javascript">
    searchDataKeamanan();
    function searchDataKeamanan() {
        var nik = $('#nik').val();
        var tanggal_awal = $('#tanggal_awal').val();
        var tanggal_akhir = $('#tanggal_akhir').val();
        var zona = $('#zona').val();
        var key = $('#key').val();

        $.ajax({
            url: {{.dataKeamananURL}},
            method: "POST",
            headers: {
                'Authorization': 'Bearer ' + {{.data.token.access_token}}
            },
            data: {
                nik: nik, 
                tanggal_awal: tanggal_awal,
                tanggal_akhir: tanggal_akhir,
                zona: zona,
                key: key
            },
            success: function(result) {
                arr_data = result.data.data_kejadian_keamanan
                table.clear().draw();
                if (arr_data.length >0){
                    arr_data.forEach((x,i)=>{
                        var tanggal = `<input type="hidden" value="${x.id_kejadian_keamanan}"><span class="font-weight-bold font-size-sm text-dark-50">${x.tanggal}</span>`
                        var nama_kapal = `<span class="font-weight-bold font-size-sm text-dark-50">${x.nama_kapal}</span>`
                        var jenis_pelanggaran = `<span class="font-weight-bold font-size-sm text-dark-50">${x.jenis_kejadian.nama_kejadian}</span>`
                        var lokasi_kejadian = `<span class="font-weight-bold font-size-sm text-dark-50">${x.lokasi_kejadian}</span>`
                        var zona = `<span class="font-weight-bold font-size-sm text-dark-50">${x.zona}</span>`
                        var url = window.location.href + `form_kejadian_keamanan?id_kejadian_keamanan=${x.id_kejadian_keamanan}`
                        var action = `<div class="d-flex justify-content-center align-items-center">
                                        <a href="${url}" class="btn btn-icon btn-sm btn-dark mx-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" onclick="deleteKejadianKeamanan('${x.id_kejadian_keamanan}')" class="btn btn-icon btn-sm btn-dark mx-2">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>`
                        var detail = `  <div class="ml-auto"> 
                                            <a href="#" class="btn btn-icon my-2 btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>`
                        {{if .data.is_staff}}
                            table.row.add([tanggal, jenis_pelanggaran, lokasi_kejadian, zona, action]).draw(false)
                        {{else}}
                            table.row.add([tanggal, jenis_pelanggaran, lokasi_kejadian, zona]).draw(false)
                        {{end}}
                    })
                }
            },
            error: function(data) {
                table.clear().draw();
                Swal.fire('Gagal!', 'Data Tidak Ada!!', 'error');
            }
        });
    }

    $('.dataTable').on('click', 'tbody tr', function() {
        var row = table.row(this).data();
        var id = $(row[0])[0].value;
        $('#detailModal .modal-body').html(`<iframe src="/detail/keamanan/${id}" width="100%" height="500px" frameborder="0"></iframe>`);
        $('#detailModal').modal('show');
    });
        
</script>

<script>
    function deleteKejadianKeamanan(id_kejadian_keamanan){
        var data = {
            id_kejadian_keamanan: id_kejadian_keamanan
        }
        Swal.fire({
            title: 'Apakah anda yakin ingin Menghapus Data Pelanggaran ini?',
            text: "Anda tidak akan dapat mengembalikan data ini!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Ya, Hapus!',
            cancelButtonText: 'Batal'
        }).then(function(result){
            console.log(result)
            if (result.value) {
                $.ajax({
                    url: {{.deleteKejadianKeamananURL}},
                    type: "DELETE",
                    headers: {
                        'Authorization': 'Bearer ' + {{.data.token.access_token}}
                    },
                    contentType: "application/json",
                    dataType: "json",
                    data: JSON.stringify(data),
                    success: function(result) {
                        Swal.fire('Berhasil!', 'Data berhasil dihapus.', 'success');
                        searchDataKeamanan()
                    },
                    error: function(err){
                        Swal.fire('Gagal!', 'Gagal Menghapus Data.', 'error');
                    }
                });
            }
        });

    }
</script>

<script>
function exportExcel() {
    var nik = $('#nik').val();
    var tanggal_awal = $('#tanggal_awal').val(); 
    var tanggal_akhir = $('#tanggal_akhir').val();
    var zona = $('#zona').val();

    // Create form data
    var formData = new FormData();
    formData.append('nik', nik);
    formData.append('tanggal_awal', tanggal_awal);
    formData.append('tanggal_akhir', tanggal_akhir);
    formData.append('zona', zona);

    // Make AJAX request
    $.ajax({
        url: '/api/kejadian/keamanan/export-excel',
        method: 'POST',
        headers: {
            'Authorization': 'Bearer ' + {{.data.token.access_token}}
        },
        data: formData,
        processData: false,
        contentType: false,
        xhrFields: {
            responseType: 'blob'
        },
        success: function(response) {
            // Create blob link to download
            const url = window.URL.createObjectURL(new Blob([response]));
            const link = document.createElement('a');
            link.href = url;
            link.setAttribute('download', 'kejadian_keamanan.xlsx');
            document.body.appendChild(link);
            link.click();
            link.remove();
        },
        error: function(xhr, status, error) {
            Swal.fire('Gagal!', 'Gagal mengexport data', 'error');
        }
    });
}

</script>
