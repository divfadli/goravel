{{ template "layouts/script.tmpl" . }}

<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<script type="text/javascript">
    var start = moment();
    var end = moment();

    function cb(start, end) {
        $('#tanggal_awal').val(start.format('YYYY-MM-DD'));
        $('#tanggal_akhir').val(end.format('YYYY-MM-DD'));
        console.log($('#tanggal_awal').val());
        console.log($('#tanggal_akhir').val());

        $('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
    }

    $('#reportrange').daterangepicker({
        startDate: start,
        endDate: end,
        ranges: {
           'Today': [moment(), moment()],
           'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
           'Last 7 Days': [moment().subtract(6, 'days'), moment()],
           'Last 30 Days': [moment().subtract(29, 'days'), moment()],
           'This Month': [moment().startOf('month'), moment().endOf('month')],
           'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
        }
    }, cb);

    cb(start, end);

</script>

{{ template "layouts/script_datatables.tmpl" . }}

<script type="text/javascript">
    let table = $('#kt_datatable').DataTable({
        dom: '<"row justify-content-end"<"col-sm-2"f>>tip',
        scrollY: '80vh', 
        scrollX: true,
        scrollCollapse: true,
        searching: true,
        columnDefs: [{
            className: 'dt-body-nowarp',
            targets: "_all"
        }],
        processing: true,
        bLengthChange: true,
        language: {
            search: "Search"
        }
    });


</script>

<script type="text/javascript">
    searchDataKeamanan();
    function searchDataKeamanan() {
        var nik = $('#nik').val();
        var tanggal_awal = $('#tanggal_awal').val();
        var tanggal_akhir = $('#tanggal_akhir').val();
        var zona = $('#zona').val();
        var key = $('#key').val();

        $.ajax({
            url: {{.dataKeamananURL}},
            method: "POST",
            data: {
                nik: nik, 
                tanggal_awal: tanggal_awal,
                tanggal_akhir: tanggal_akhir,
                zona: zona,
                key: key
            },
            success: function(result) {
                arr_data = result.data.data_kejadian_keamanan
                table.clear().draw();
                if (arr_data.length >0){
                    arr_data.forEach((x,i)=>{
                        var tanggal = `<span class="font-weight-bold font-size-sm text-dark-50">${x.tanggal}</span>`
                        var nama_kapal = `<span class="font-weight-bold font-size-sm text-dark-50">${x.nama_kapal}</span>`
                        var jenis_pelanggaran = `<span class="font-weight-bold font-size-sm text-dark-50">${x.jenis_kejadian.nama_kejadian}</span>`
                        var lokasi_kejadian = `<span class="font-weight-bold font-size-sm text-dark-50">${x.lokasi_kejadian}</span>`
                        var zona = `<span class="font-weight-bold font-size-sm text-dark-50">${x.zona}</span>`
                        var url = window.location.href + `form_kejadian_keamanan?id_kejadian_keamanan=${x.id_kejadian_keamanan}`
                        var action = ` <div class="form-inline"> 
                                            <div class="ml-auto"> 
                                                <a href="${url}" class="btn btn-icon my-2 btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                            <div class="ml-auto">
                                                <button type="button" onclick="deleteKejadianKeamanan('${x.id_kejadian_keamanan}')" class="btn btn-icon my-2 btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>`
                        var detail = `  <div class="ml-auto"> 
                                            <a href="#" class="btn btn-icon my-2 btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>`
                        table.row.add([tanggal, nama_kapal, jenis_pelanggaran, lokasi_kejadian, zona, action, detail]).draw(false)
                    })
                }
            },
            error: function(data) {
                table.clear().draw();
                Swal.fire('Gagal!', 'Data Tidak Ada!!', 'error');
            }
        });
    }
        
</script>

<script>
    function deleteKejadianKeamanan(id_kejadian_keamanan){
        var data = {
            id_kejadian_keamanan: id_kejadian_keamanan
        }
        Swal.fire({
            title: 'Apakah anda yakin ingin Menghapus Data Pelanggaran ini?',
            text: "Anda tidak akan dapat mengembalikan data ini!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Ya, Hapus!',
            cancelButtonText: 'Batal'
        }).then(function(result){
            console.log(result)
            if (result.value) {
                $.ajax({
                    url: {{.deleteKejadianKeamananURL}},
                    type: "DELETE",
                    contentType: "application/json",
                    dataType: "json",
                    data: JSON.stringify(data),
                    success: function(result) {
                        Swal.fire('Berhasil!', 'Data berhasil dihapus.', 'success');
                        searchDataKeamanan()
                    },
                    error: function(err){
                        Swal.fire('Gagal!', 'Gagal Menghapus Data.', 'error');
                    }
                });
            }
        });

    }
</script>
