{{ define "register.tmpl" }}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <title>Register</title>
</head>

<body>
  <div class="container" style="margin-top: 50px">
      <div class="row">
        <div class="col-md-5 offset-md-3">
          <div class="card">
            <div class="card-body">
              <label>REGISTER</label>
              <hr>

                <div class="form-group">
                  <label>Username</label>
                  <input type="text" class="form-control" id="username" placeholder="Masukkan Username" required>
                </div>

                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Masukkan Password" required>
                </div>

                <div class="form-group">
                  <label>Repeat Password</label>
                  <input type="password" class="form-control" id="re-password" placeholder="Masukkan Repeat Password" required>
                </div>

                <div class="form-group">
                  <label>Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Masukkan Email" required>
                </div>

                <div class="form-group">
                  <label>Nama</label>
                  <input type="text" class="form-control" id="name" placeholder="Masukkan Nama" required>
                </div>

                <div class="form-group">
                  <label>Nik</label>
                  <input type="number" class="form-control" id="nik" placeholder="Masukkan Nik" required>
                </div>
                <button type="submit" class="btn btn-register btn-block btn-success">REGISTER</button>
            </div>
          </div>

          <div class="text-center" style="margin-top: 15px">
            Sudah punya akun? <a href="/login">Silahkan Login</a>
          </div>

        </div>
      </div>
    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" ></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.all.min.js"></script>

<script>
    $(document).ready(function() {
        $(".btn-register").click( function() {
            var data
            
            var username = $("#username").val();
            var password = $("#password").val();
            var re_password = $("#re-password").val();
            var email = $("#email").val();
            var name = $("#name").val();
            var nik = $("#nik").val();

            if(username === "" || password === "" || re_password === "" || email === "" || name === "" || nik === ""){
                Swal.fire({
                    type: 'warning',
                    title: 'Opps!',
                    text: "Semua field harus diisi!!"
                });
                return;
            }

            if(password !== re_password){
                Swal.fire({
                    type: 'warning',
                    title: 'Opps!',
                    text: "Password dan Repeat Password harus sama"
                });
                return;
            }

            if (!isValidEmail(email)) {
                Swal.fire({
                    type: 'warning',
                    title: 'Opps!',
                    text: "Masukkan Email yang valid!!"
                });
                return;
            }

            data = {
                username: username,
                password: password,
                email: email,
                name: name,
                nik: nik,
            }
            
            $.ajax({
                url: "{{.registerURL}}",
                method: "POST",
                data: data,
                success: function(data) {
                    Swal.fire({
                        type: 'success',
                        title: 'Register Berhasil!',
                        text: "Loading...",
                        timer: 2000,
                        onBeforeOpen: () => {
                            swal.showLoading();
                        },
                        showConfirmButton: false
                    }).then(function() {
                        window.location.href = "/login";
                    });
                },
                error:function(response){
                    Swal.fire({
                        type: 'error',
                        title: 'Opps!',
                        text: response.responseJSON.message
                    });
                }
            });
            
        });  
    });
</script>

<script>
    function isValidEmail(email) {
        // Regular expression for validating email format
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
</script>

</html>

{{end}}